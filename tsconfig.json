{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "@types"
    ],
    "resolveJsonModule": true // Optional if you import JSON files
  },
  "include": [
    "src",
    "prisma"
  ],
  "exclude": [
    "node_modules"
  ]
}